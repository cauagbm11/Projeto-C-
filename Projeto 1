#include <iostream>

using namespace std;

void movi()
{
	char matriz[25][25];
	int ey, ex, p;
	
	
	for(ex = 0; ex < 24; ex++)
	{
		matriz[0][ex] = '*';
		cout << matriz[0][ex];
		cout << " ";
	}
	 cout << " ";

	for(ex = 1; ex < 25; ex++)
	{
		matriz[1][ex] = '*';
		cout << matriz[1][ex];
		
		for(ey = 1; ey < 25; ey++)
		{
			matriz[ey][1] = ' ';
			cout << matriz[ey][1] << " ";
		}
		cout << "*\n";
	}
	
	for(ex = 0; ex < 25; ex++)
	{
		matriz[24][ex] = '*';
		cout << matriz[24][ex];
		cout << " ";
	}
	
	matriz[13][13] = '*';
	cin >> p;
	
	
	
}

void menu()
{
	int x;
	
	cout << "########## MENU ##########\n";
	cout << "1-JOGAR\n";
	cout << "2-TUTORIAL\n";
	cout << "3-SAIR\n";
	cout << "##########################\n"; 
	cin >> x;
	
	switch(x)
	{
		case 1:
		movi();
		break;
	}
}

int main()
{
	menu();
}
